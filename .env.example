# =============================================================================
# Omn1-ACE Environment Configuration
# =============================================================================
# Copy this file to .env and update with your values
#
# IMPORTANT: Change all passwords before production deployment!
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://omn1:CHANGE_ME@localhost:5432/omn1_ace
POSTGRES_PASSWORD=CHANGE_ME

# -----------------------------------------------------------------------------
# Infrastructure Services
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
QDRANT_URL=http://localhost:6333

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
ENVIRONMENT=development
LOG_LEVEL=INFO
MAX_WORKERS=4

# CORS: Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# -----------------------------------------------------------------------------
# External AI API Keys (Optional - for compression/embeddings)
# -----------------------------------------------------------------------------
# Uncomment and set if using external AI services
# ANTHROPIC_API_KEY=sk-ant-...
# OPENAI_API_KEY=sk-...
# GOOGLE_API_KEY=AIza...
# GEMINI_API_KEY=...

# AWS (Optional - for cloud compression)
# AWS_ACCESS_KEY_ID=AKIA...
# AWS_SECRET_ACCESS_KEY=...
# AWS_REGION=us-east-1

# -----------------------------------------------------------------------------
# Service URLs (for distributed deployment)
# -----------------------------------------------------------------------------
# METRICS_SERVICE_URL=http://localhost:8004

# -----------------------------------------------------------------------------
# Admin/Security
# -----------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# OMNIMEMORY_ADMIN_KEY=

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
# Target model for context optimization (claude, gpt, gemini)
# DEFAULT_TARGET_MODEL=claude

# Context window sizes (tokens)
# CLAUDE_CONTEXT_WINDOW=200000
# GPT_CONTEXT_WINDOW=128000
# GEMINI_CONTEXT_WINDOW=1000000
